{
  "name": "@petbee/eslint-config",
  "version": "2.0.5",
  "description": "Petbee's eslint config",
  "keywords": [
    "eslint",
    "config",
    "petbee"
  ],
  "homepage": "https://github.com/petbee/typescript",
  "license": "MIT",
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./eslint.config.mjs"
    },
    "./legacy": "./index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/petbee/typescript.git",
    "directory": "packages/eslint-config"
  },
  "scripts": {
    "eslint-check": "eslint-config-prettier index.js",
    "dump-config": "eslint-config-prettier index.js > config-dump.json",
    "format": "prettier --ignore-path='.gitignore' --list-different --write .",
    "format:check": "prettier --ignore-path='.gitignore' --check .",
    "lint": "eslint '{src,tests}/**/*.{ts,tsx}'"
  },
  "eslintConfig": {
    "extends": [
      "petbee"
    ]
  },
  "prettier": "@petbee/prettier-config",
  "bugs": {
    "url": "https://github.com/petbee/typescript/issues"
  },
  "dependencies": {
    "confusing-browser-globals": "^1.0.11"
  },
  "peerDependencies": {
    "eslint": "^9.27.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-cypress": "^4.3.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.18.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "7.37.5",
    "prettier": ">=3.0.0",
    "typescript": "^4.0.0 || ^5.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    },
    "@typescript-eslint/eslint-plugin": {
      "optional": false
    },
    "@typescript-eslint/parser": {
      "optional": false
    },
    "eslint-config-prettier": {
      "optional": false
    },
    "eslint-plugin-cypress": {
      "optional": false
    },
    "eslint-plugin-import": {
      "optional": false
    },
    "eslint-plugin-jest": {
      "optional": false
    },
    "eslint-plugin-n": {
      "optional": false
    },
    "eslint-plugin-prettier": {
      "optional": false
    },
    "eslint-plugin-react": {
      "optional": false
    },
    "prettier": {
      "optional": false
    },
    "typescript": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/react": "19.1.5",
    "prettier": "3.5.3",
    "react": "19.1.0",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
